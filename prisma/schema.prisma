generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ApiScope {
  expenses_read
  expenses_write
  analytics_read
  income_write
  budget_read
}

model User {
  id                 String              @id @default(cuid())
  name               String?
  email              String?             @unique
  emailVerified      DateTime?
  image              String?
  defaultCurrency    String              @default("USD")
  themePreference    String              @default("system")
  accentColor        String?
  onboardingCompleted Boolean            @default(false)
  encryptionKeyVersion Int               @default(1)
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  accounts           Account[]
  sessions           Session[]
  categories         Category[]
  expenses           Expense[]
  expenseGroups      ExpenseGroup[]
  recurringExpenses  RecurringExpense[]
  incomes            Income[]
  recurringIncomes   RecurringIncome[]
  monthlyOverrides   MonthlyIncomeOverride[]
  apiKeys            ApiKey[]
  importSchedules    ImportSchedule[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Category {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  color     String   @default("#0ea5e9")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  expenses  Expense[]
  recurring RecurringExpense[]

  @@unique([userId, name])
}

model ExpenseGroup {
  id                  String    @id @default(cuid())
  userId              String
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  titleEncrypted      Json
  notesEncrypted      Json?
  splitBy             Int?      @default(1)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  expenses            Expense[]
}

model Expense {
  id                    String            @id @default(cuid())
  userId                String
  user                  User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  amountEncrypted       Json
  impactAmountEncrypted Json
  descriptionEncrypted  Json
  occurredOn            DateTime
  categoryId            String?
  category              Category?         @relation(fields: [categoryId], references: [id])
  groupId               String?
  group                 ExpenseGroup?     @relation(fields: [groupId], references: [id])
  recurringSourceId     String?
  recurringSource       RecurringExpense? @relation("RecurringExpenseInstances", fields: [recurringSourceId], references: [id])
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt
}

model RecurringExpense {
  id                   String    @id @default(cuid())
  userId               String
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId           String?
  category             Category? @relation(fields: [categoryId], references: [id])
  amountEncrypted      Json
  descriptionEncrypted Json
  dueDayOfMonth        Int       @default(1)
  splitBy              Int       @default(1)
  isActive             Boolean   @default(true)
  lastGeneratedOn      DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  expenses             Expense[] @relation("RecurringExpenseInstances")
}

model Income {
  id                    String   @id @default(cuid())
  userId                String
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amountEncrypted       Json
  descriptionEncrypted  Json
  occurredOn            DateTime
  recurringSourceId     String?
  recurringSource       RecurringIncome? @relation("RecurringIncomeInstances", fields: [recurringSourceId], references: [id])
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model RecurringIncome {
  id                   String    @id @default(cuid())
  userId               String
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  amountEncrypted      Json
  descriptionEncrypted Json
  dueDayOfMonth        Int       @default(1)
  isActive             Boolean   @default(true)
  lastGeneratedOn      DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  incomes              Income[]  @relation("RecurringIncomeInstances")
}

model MonthlyIncomeOverride {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  month           DateTime
  amountEncrypted Json
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([userId, month])
}

model ApiKey {
  id             String     @id @default(cuid())
  userId         String
  user           User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  prefix         String
  hashedSecret   String
  scopes         ApiScope[]
  expiresAt      DateTime?
  revokedAt      DateTime?
  createdAt      DateTime   @default(now())
  tokenLastUsedAt DateTime?
  description    String?

  @@unique([userId, prefix])
  @@unique([prefix])
}

enum ImportMode {
  expenses
  income
}

enum ImportFrequency {
  weekly
  biweekly
  monthly
  quarterly
}

model ImportSchedule {
  id          String           @id @default(cuid())
  userId      String
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  mode        ImportMode
  template    String           @default("default")
  frequency   ImportFrequency  @default(monthly)
  sourceUrl   String?
  lastRunAt   DateTime?
  nextRunAt   DateTime?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}
